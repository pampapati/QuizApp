<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="huawei.quiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="huawei.quizActivity.MainActivity"
            android:label="Welcome" >
            <intent-filter android:label="Welcome to quiz" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="huawei.quizActivity.CreditActivity"
            android:label="Credits"
            android:parentActivityName="huawei.quizActivity.MainActivity" >
        </activity>
        <activity
            android:name="huawei.quiz.DisplayQuestion"
            android:label="Welcome" >
            <intent-filter android:label="Welcome to quiz" >
                <action android:name="android.intent.action.dispaly" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="huawei.quizActivity.RulesActivity"
            android:label="Rules"
            android:parentActivityName="huawei.quizActivity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.dispaly" />
            </intent-filter>
        </activity>
        <activity
            android:name="huawei.quizActivity.DisplayCategory"
            android:label="@string/title_activity_display_category"
            android:parentActivityName="huawei.quizActivity.MainActivity" >
            <action android:name="android.intent.action.dispaly" />
        </activity>
    </application>

</manifest>
